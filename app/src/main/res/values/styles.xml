<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/c_button_background</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">17sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SmallButtonStyle" parent="ButtonStyle">
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">@color/c_button_background</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/c_button_background</item>
        <item name="android:textSize">17sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SmallOutlinedButtonStyle" parent="OutlinedButtonStyle">
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PageTitleStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainTitleStyle" parent="PageTitleStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PickerTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="PickerHeaderTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="TitleTextStyle" parent="NormalTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HintTextStyle" parent="NormalTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="SecondaryTextStyle">
        <item name="android:textColor">@color/colorGraySecondary</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MediumSecondaryTextStyle" parent="SecondaryTextStyle">
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SmallSecondaryTextStyle" parent="SecondaryTextStyle">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SmallBlueTextStyle" parent="MediumSecondaryTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SmallTextStyle">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="BlueTextStyle" parent="NormalTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>